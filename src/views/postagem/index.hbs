<div class="card">
    <div class="card-body">
        <h1>{{postagem.titulo}}</h1>
        <hr>
        <small>Data de publicação: {{postagem.data}}</small>
        <hr>
        <p>{{postagem.conteudo}}</p>
        <hr>
        
    
        
        {{#if (eq postagem.img.tipo 'img')}}
            <h3>Arquivos: </h3>

            <img src="/imagem/{{postagem.img.id}}" style="width: 100px;">
            <!--
                SE USAR A PASTA UPLOADS USAR ESSE COD PARA PEGAR A IMAGEM
                <img src="../../public/upload/" style="width: 100px;">
            -->
        {{else}}
        {{/if}}


        {{#if (eq postagem.img.tipo 'pdf')}}
            <h3>Arquivos: </h3>

            <embed src="/pdf/{{postagem.img.id}}" type="application/pdf" width="100%" height="500px" />

        {{else}}
        {{/if}}

        {{#if (eq postagem.img.tipo 'word')}}
            <h3>Arquivos: </h3>
            <h5>Arquivo Word: </h5>

            <a href="/download/{{postagem.img.id}}"><small>{{postagem.img.nome}}</small></a>

        {{else}}
        {{/if}}

        {{#if (eq postagem.img.tipo 'audio')}}
            <h3>Arquivos: <small>audio</small></h3>
            
            <audio controls>
                <source src="/audio/{{postagem.img.id}}" type="audio/mp3">
                Seu navegador não suporta a tag de áudio.
            </audio>
        {{else}}
        {{/if}}
    </div>
</div>
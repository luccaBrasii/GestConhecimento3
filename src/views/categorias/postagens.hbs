<h1>{{categoria.nome}}</h1>



<div class="grid text-center">
    <div>
        <label>PESQUISE ALGO</label>
        <input type='text' class="pesquisa">
        <button class="pesquisaProfunda">PESQUISAR EM DOCUMENTOS</button>
    </div>
    <div class="outputPesquisa">

    </div>
</div>
<hr>


{{#each postagens}}

<div class="card mt-4">
    <div class="card-body">
        <div class="alertaUser"></div>
        <h4 class="titulo">{{titulo}}</h4>
        <p class="descricao">{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <textarea class="conteudo" style="display: none;">{{conteudo}}</textarea>
        <small><strong>Data:</strong> {{dateFormat data}}</small><br>
        <strong>Autor:</strong>
        <small class="autor"> <label>{{autor}}</label></small>
    </div>

    <div class="d-inline-flex">
        {{#img}}
            <img src={{iconDoc tipo}} style="width: 30px;">
        {{/img}}
    </div>
</div>
{{else}}

<h5>Nenhum post registrado!</h5>
{{/each}}


<script type="module" src="/public/js/scripts.js"></script>
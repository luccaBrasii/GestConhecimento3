    {{else}}    
{{/each}}
<h3>Nova categoria: </h3>
<div class="card">
    <div class="card-body">
            <form action='/cadastrar' method="post">
                <label>Título</label>
            <input type="text" placeholder="Título da matéria" name="nome" class="form-control">
            <br>
            
            <button type="submit" class="btn btn-success">Salvar categoria</button>
        </form>
    </div>
</div>